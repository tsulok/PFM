<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Category_Button" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/selector_category</item>
        <item name="android:layout_width">@dimen/category.filter.button.size</item>
        <item name="android:layout_height">@dimen/category.filter.button.size</item>
        <item name="android:padding">@dimen/default.padding</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">2</item>
    </style>

    <style name="AppTheme.Category_Button_Featured" parent="AppTheme.Category_Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
    </style>

    <style name="AppTheme.InputImageButton">
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="AppTheme.Input_Action_Button" parent="AppTheme.InputImageButton">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">2</item>
    </style>

    <style name="AppTheme.Input_Keyboard_Button" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/input.keyboard.number.padding.vertical</item>
        <item name="android:paddingBottom">@dimen/input.keyboard.number.padding.vertical</item>
        <item name="android:textSize">@dimen/input.keyboard.number.text.size</item>
    </style>

    <style name="AppTheme.RegularAppFont">
        <item name="fontType">Montserrat-Regular.otf</item>
    </style>

    <style name="AppTheme.BaseEditText" parent="AppTheme.RegularAppFont">

    </style>

    <style name="AppTheme.BaseText" parent="AppTheme.RegularAppFont">

    </style>
</resources>
